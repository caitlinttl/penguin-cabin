<html>
	<head>
		<title>Penguin Cabin | Message</title>
		<%- include ("../partials/header.ejs") %>	
	</head>
	<body class="homepage is-preload">

		<%- include ("../partials/loading.ejs") %>	

		<div id="page-wrapper">

			<!-- Header -->
				<section id="header">

					<!-- Logo -->
						<h1><a id="goToHome" href="/">Penguin Cabin</a></h1>

					<!-- Nav -->
						<nav id="nav">
							<ul>
								<li><a id="goToPenguin" href="/">Penguins</a></li>
								<li><a id="goToMap" href="/map">Map</a></li>
								<li><a id="goToNews" href="/news">News</a></li>
								<li class="current"><a id="goToMessage" href="/message">Message</a></li>
							</ul>
						</nav>

				</section>

			<!-- Main -->
			<section id="main">
				<div class="container">
					<div class="row">
						<div class="col-12">

							<!-- Portfolio -->
								<section>
									<header class="major">
										<h2>Message Board</h2>
									</header>
									
									<div id="editicon">
										<a id="goToOtherPage" href="/add-message"><img src="images/edit.png" alt="" title="Write a Message"/></a>
									</div>

									<div class="row">

										<!-- message -->
										<% for(let i = 0; i < message.length; i++) { %>
											<div class="col-4 col-6-medium col-12-small">
												<section class="box">
													<header>
														<h3><%= message[i][0]%></h3>
														<h12><%= message[i][2]%></h12>
													</header>
													<% var data = message[i][1] %>
													<% var data = data.replace(/</g, '&lt;').replace(/>/g, '&gt;') %>
													<p><%- data.replace(/(?:\r\n|\r|\n)/g, '<br>') %></p>
												</section>
											</div>
										<% } %>
										

									</div>
								</section>

						</div>
						<div class="col-12">


						</div>
					</div>
				</div>
			</section>

		<!-- Footer -->
		<%- include ("../partials/footer.ejs") %>	

		

	</div>

	<!-- Scripts -->
	<%- include ("../partials/scripts.ejs") %>	

</body>
</html>